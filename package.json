{
  "name": "motoscrape",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "tsx ./src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "oxlint --fix .",
    "format": "prettier --write --experimental-cli .",

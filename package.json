    "playwright": "^1.54.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "latest",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "latest",
    "@typescript/native-preview": "latest",
    "@vitest/ui": "^3.2.4",
    "oxlint": "latest",
    "prettier": "latest",
    "tsx": "^4.20.3",
    "typescript": "latest",
    "vitest": "^3.2.4"
  }
}
